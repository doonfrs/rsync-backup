[remote]
user = [your_username]
host = [your_host]
path = [your_path]

[sources]
dirs = dir1, dir2, dir3

[excludes]
patterns = *.gz, *.zip, *.tar, *.bak

[options]
delete_remote = false
verbose = false
progress = true
show_stats = true
# Run rsync with sudo (default: false)
# Note: Requires the user to have sudo privileges for rsync command
use_sudo = false

[staging]
# Enable smart mode for minimal service downtime (default: false)
local_staging = false
# Path to local staging directory (can be relative like .backup or absolute like /home/user/.backup)
staging_path = .backup
